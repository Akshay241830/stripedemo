<h1>Products</h1>

<%= link_to 'New Product', new_product_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= number_to_currency(product.price / 100.0) %></td>
        <td><%= button_to 'Buy', checkout_product_path(product), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>
